{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/packages/ui/**/*.css",
      "!**/coverage",
      "!**/MsgCompiled.ts",
      "!**/.astro",
      "!**/docs",
      "!*.lock"
    ],
    "maxSize": 5242880
  },
  "formatter": {
    "attributePosition": "auto",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "enabled": true,
    "expand": "never",
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "html": { "formatter": { "enabled": true } },
  "javascript": { "formatter": { "semicolons": "always" }, "globals": ["React", "Bun", "Todo", "NotWorth"] },
  "json": {
    "assist": { "enabled": true },
    "formatter": { "enabled": true, "expand": "never", "indentStyle": "space", "indentWidth": 2 }
  },
  "linter": {
    "domains": { "react": "all", "test": "all" },
    "enabled": true,
    "rules": {
      "complexity": {
        "noBannedTypes": "off",
        "noExcessiveCognitiveComplexity": { "level": "warn", "options": { "maxAllowedComplexity": 25 } },
        "noImportantStyles": "off"
      },
      "correctness": {
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off",
        "noUndeclaredVariables": "error",
        "noUnusedImports": { "fix": "safe", "level": "error" }
      },
      "nursery": {
        "noFloatingPromises": "on",
        "noImportCycles": "on",
        "recommended": true,
        "useExplicitType": "off",
        "useSortedClasses": { "fix": "safe", "level": "warn", "options": {} }
      },
      "performance": { "noNamespaceImport": "off" },
      "recommended": true,
      "security": {},
      "style": {
        "noDefaultExport": "off",
        "noDescendingSpecificity": "off",
        "noImplicitBoolean": "off",
        "noInferrableTypes": "error",
        "noParameterAssign": "error",
        "noUnusedTemplateLiteral": "error",
        "noUselessElse": "error",
        "useAsConstAssertion": "error",
        "useBlockStatements": "off",
        "useComponentExportOnlyModules": "off",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useExplicitLengthCheck": "off",
        "useFilenamingConvention": "off",
        "useNamingConvention": "off",
        "useNodejsImportProtocol": "off",
        "useNumberNamespace": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error"
      },
      "suspicious": {
        "noConsole": "off",
        "noEvolvingTypes": "off",
        "noExplicitAny": "off",
        "noFocusedTests": { "fix": "none", "level": "error" },
        "noReactSpecificProps": "off",
        "useAwait": "error"
      }
    }
  },
  "overrides": [{ "includes": ["playgrounds/**"], "linter": { "rules": { "a11y": "off" } } }],
  "vcs": { "clientKind": "git", "enabled": true, "useIgnoreFile": true }
}
