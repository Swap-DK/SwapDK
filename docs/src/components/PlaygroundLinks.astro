---
const props = {
  bunUrl: "https://github.com/Swap-DK/SwapDK/tree/main/playgrounds/bun",
  compact: false,
  description: "Explore SwapDK in a live development environment",
  nextjsUrl: "https://github.com/Swap-DK/SwapDK/tree/main/playgrounds/nextjs",
  title: "Try it in a Playground",
  viteUrl: "https://github.com/Swap-DK/SwapDK/tree/main/playgrounds/vite",
  ...Astro.props,
};
---

<div class={`playground-links ${props.compact ? 'compact' : ''}`}>
  {!props.compact && (
    <div class="playground-header">
      <h3 class="playground-title">{props.title}</h3>
      <p class="playground-description">{props.description}</p>
    </div>
  )}
  
  <div class="playground-grid">
    <div class="playground-category">
      <h4 class="category-title">Official Playgrounds</h4>
      <div class="link-grid">
        <a 
          href={props.nextjsUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          class="playground-link"
        >
          <div class="link-icon nextjs">
