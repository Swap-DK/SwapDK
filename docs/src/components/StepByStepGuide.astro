---
interface Step {
  title: string;
  description: string;
  code?: string;
  action?: string;
  result?: string;
  tips?: string[];
}

const props = {
  description: "Follow along with this interactive tutorial",
  title: "Step-by-Step Guide",
  ...Astro.props,
};
const steps = props.steps as Step[];
---

<div class="step-guide">
  <div class="guide-header">
    <h3 class="guide-title">{props.title}</h3>
    <p class="guide-description">{props.description}</p>
    {props.playgroundUrl && (
      <a href={props.playgroundUrl} target="_blank" rel="noopener noreferrer" class="playground-link">
        <svg class="link-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M12 2L2 7l10 5 10-5-10-5z"/>
          <path d="M2 17l10 5 10-5"/>
          <path d="M2 12l10 5 10-5"/>
        </svg>
        Try in Playground
      </a>
    )}
  </div>
  
  <div class="guide-progress">
    <div class="progress-bar">
      <div class="progress-fill" id="progressFill" style="width: 0%"></div>
    </div>
    <div class="progress-text">
      <span id="progressText">Step 1 of {steps.length}</span>
    </div>
  </div>
  
  <div class="steps-container">
    {steps.map((step, index) => (
      <div class={`step ${index === 0 ? 'active' : ''}`} data-step={index + 1}>
        <div class="step-header">
          <div class="step-number">{index + 1}</div>
          <div class="step-info">
            <h4 class="step-title">{step.title}</h4>
            <p class="step-description">{step.description}</p>
          </div>
          <div class="step-status" id={`status-${index + 1}`}>
            <svg class="status-icon pending-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 6v6l4 2"/>
            </svg>
            <svg class="status-icon complete-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" style="display: none;">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22,4 12,14.01 9,11.01"/>
            </svg>
          </div>
        </div>
        
        <div class="step-content">
          {step.code && (
            <div class="step-code">
              <div class="code-header">
                <span class="code-label">Code Example</span>
                <button class="copy-step-btn" data-code={step.code}>
                  <svg class="copy-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
                    <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
                  </svg>
                  Copy
                </button>
              </div>
              <pre class="code-block"><code>{step.code}</code></pre>
            </div>
          )}
          
          {step.action && (
            <div class="step-action">
              <div class="action-header">
                <span class="action-label">Action Required</span>
              </div>
              <div class="action-content">
                <p>{step.action}</p>
                <button class="action-btn" data-step={index + 1}>
                  <span class="btn-icon">‚ñ∂Ô∏è</span>
                  Complete Step
                </button>
              </div>
            </div>
          )}
          
          {step.result && (
            <div class="step-result" id={`result-${index + 1}`} style="display: none;">
              <div class="result-header">
                <span class="result-label">Expected Result</span>
              </div>
              <div class="result-content">
                <p>{step.result}</p>
              </div>
            </div>
          )}
          
          {step.tips && step.tips.length > 0 && (
            <div class="step-tips">
              <div class="tips-header">
                <svg class="tips-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M8.5 14.5A2.5 2.5 0 0 0 11 12c0-1.38-.5-2-1-3-1.072-2.143-.224-4.054 2-6 .5 2.5 2 4.9 4 6.5 2 1.6 3 3.5 3 5.5a7 7 0 1 1-14 0c0-1.153.433-2.294 1-3a2.5 2.5 0 0 0 2.5 2.5z"/>
                </svg>
                Tips & Best Practices
              </div>
              <ul class="tips-list">
                {step.tips.map(tip => (
                  <li class="tip-item">{tip}</li>
                ))}
              </ul>
            </div>
          )}
          
          <div class="step-navigation">
            {index > 0 && (
              <button class="nav-btn prev-btn" data-step={index}>
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <polyline points="15,18 9,12 15,6"/>
                </svg>
                Previous
              </button>
            )}
            
            <button class="nav-btn next-btn" data-step={index + 2} style={index === steps.length - 1 ? "display: none;" : ""}>
              Next
              <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <polyline points="9,18 15,12 9,6"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    ))}
  </div>
  
  <div class="guide-completion" id="guideCompletion" style="display: none;">
    <div class="completion-content">
      <div class="completion-icon">üéâ</div>
      <h3 class="completion-title">Congratulations!</h3>
      <p class="completion-message">You've successfully completed the tutorial. Ready to build something amazing with SwapDK?</p>
      {props.playgroundUrl && (
        <a href={props.playgroundUrl} target="_blank" rel="noopener noreferrer" class="completion-btn">
          <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M12 2L2 7l10 5 10-5-10-5z"/>
            <path d="M2 17l10 5 10-5"/>
            <path d="M2 12l10 5 10-5"/>
          </svg>
          Build in Playground
        </a>
      )}
    </div>
  </div>
</div>

<script is:inline>
document.addEventListener('DOMContentLoaded', function() {
  let currentStep = 1;
  const stepsContainer = document.querySelector('.steps-container');
  const totalSteps = stepsContainer ? parseInt(stepsContainer.children.length.toString()) : 0;
  const progressFill = document.getElementById('progressFill');
  const progressText = document.getElementById('progressText');
  const guideCompletion = document.getElementById('guideCompletion');
  
  if (!progressFill || !progressText || !guideCompletion) {
    return;
  }
  
  function updateProgress() {
    const percentage = (currentStep / totalSteps) * 100;
    progressFill.style.width = percentage + '%';
    progressText.textContent = 'Step ' + currentStep + ' of ' + totalSteps;
    
    if (currentStep > totalSteps) {
      progressText.textContent = 'Complete!';
      guideCompletion.style.display = 'block';
    }
  }
  
  function showStep(stepNumber) {
    document.querySelectorAll('.step').forEach(function(step, index) {
      if (index + 1 === stepNumber) {
        step.classList.add('active');
      } else {
        step.classList.remove('active');
      }
    });
    
    currentStep = stepNumber;
    updateProgress();
    
    const activeStep = document.querySelector('.step.active');
    if (activeStep) {
      activeStep.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
  }
  
  function completeStep(stepNumber) {
    const status = document.getElementById('status-' + stepNumber);
    const result = document.getElementById('result-' + stepNumber);
    
    if (status) {
      const pendingIcon = status.querySelector('.pending-icon');
      const completeIcon = status.querySelector('.complete-icon');
      
      if (pendingIcon) pendingIcon.style.display = 'none';
      if (completeIcon) completeIcon.style.display = 'inline';
      status.classList.add('completed');
    }
    
    if (result) {
      result.style.display = 'block';
    }
    
    setTimeout(function() {
      if (stepNumber < totalSteps) {
        showStep(stepNumber + 1);
      } else {
        currentStep = totalSteps + 1;
        updateProgress();
      }
    }, 1500);
  }
  
  document.querySelectorAll('.copy-step-btn').forEach(function(button) {
    button.addEventListener('click', async function() {
      const code = this.getAttribute('data-code');
      if (!code) return;
      
      try {
        await navigator.clipboard.writeText(code);
        const originalText = this.innerHTML;
        this.innerHTML = '<svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20,6 9,17 4,12"/></svg>Copied!';
        setTimeout(function() {
          button.innerHTML = originalText;
        }, 2000);
      } catch (err) {
        console.error('Failed to copy code: ', err);
      }
    });
  });
  
  document.querySelectorAll('.action-btn').forEach(function(button) {
    button.addEventListener('click', function() {
      const stepAttr = this.getAttribute('data-step');
      if (!stepAttr) return;
      
      const stepNumber = parseInt(stepAttr);
      this.disabled = true;
      this.innerHTML = '<span class="btn-icon">‚è≥</span>Processing...';
      
      setTimeout(function() {
        completeStep(stepNumber);
        button.innerHTML = '<span class="btn-icon">‚úÖ</span>Completed';
      }, 1000);
    });
  });
  
  document.querySelectorAll('.nav-btn').forEach(function(button) {
    button.addEventListener('click', function() {
      const stepAttr = this.getAttribute('data-step');
      if (!stepAttr) return;
      
      const targetStep = parseInt(stepAttr);
      showStep(targetStep);
    });
  });
  
  updateProgress();
});
</script>

